{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ES2020",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"outDir": "public/libs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"verbatimModuleSyntax": false,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
